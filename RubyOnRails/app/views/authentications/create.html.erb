<div class="container">
  <% if @auth.certificate %>
  <!-- We'll render different contents depending on whether the authentication succeeded or not -->
  <h2>Authentication successful</h2>

  <p>
    User certificate information:
  <ul>
    <li>Subject: <%= @auth.certificate.subjectName.commonName %> </li>
    <li>Email: <%= @auth.certificate.emailAddress %></li>
    <li>
      ICP-Brasil fields
      <ul>
        <li>Tipo de certificado: <%= @auth.certificate.pkiBrazil.certificateType %></li>
        <li>CPF: <%= @auth.certificate.pkiBrazil.cpf %></li>
        <li>Responsavel: <%= @auth.certificate.pkiBrazil.responsavel %></li>
        <li>Empresa: <%= @auth.certificate.pkiBrazil.companyName %></li>
        <li>CNPJ: <%= @auth.certificate.pkiBrazil.cnpj %> </li>
      </ul>
    </li>
  </ul>
  </p>
      <% else %>
  <!-- 		The $vr object can be used as a string, but the string contains tabs and new line characters for formatting,
      which we'll convert to <br>'s and &nbsp;'s.
   -->
  <h2>Authentication Failed</h2>
  <p>
    {{ vr_html|safe }}
  </p>
  <p><a href="/authentication" class="btn btn-primary">Try again</a></p>
  <% end %>
</div>